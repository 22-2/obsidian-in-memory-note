{
	"name": "obsidian-sandbox-note",
	"version": "2.5.0",
	"type": "module",
	"description": "A minimal sandbox note-taking plugin for Obsidian.",
	"main": "main.js",
	"scripts": {
		"dev": "pnpm dlx tsx esbuild.config.mts",
		"build": "pnpm dlx tsx esbuild.config.mts production",
		"check-types": "tsc -noEmit -skipLibCheck",
		"repomix": "pnpm dlx repomix && code ./repomix-output.md",
		"test": "vitest",
		"version:full": "pnpm dlx tsx version-bump.ext.mts all",
		"test:e2e": "playwright test",
		"test:e2e:example": "pnpm playwright test e2e/specs/setup/example.spec.ts --project=chromium",
		"test:e2e:minimal-main": "pnpm playwright test e2e/specs/setup/minimal-main.spec.ts --project=chromium",
		"test:e2e:report": "playwright show-report",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "cross-env DEBUG=pw:api playwright test"
	},
	"keywords": [],
	"author": "22-2",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@electron/asar": "^4.0.1",
		"@playwright/test": "^1.55.1",
		"@types/node": "24.5.2",
		"@types/node-notifier": "^8.0.5",
		"@types/semver": "^7.7.1",
		"builtin-modules": "5.0.0",
		"chalk": "^5.6.2",
		"dotenv": "^17.2.2",
		"electron": "^38.1.2",
		"esbuild": "0.25.10",
		"jsdom": "^27.0.0",
		"loglevel-plugin-prefix": "^0.8.4",
		"obsidian": "^1.8.7",
		"obsidian-typings": "4.51.0",
		"open": "^10.2.0",
		"playwright": "^1.55.1",
		"powertoast": "^3.0.0",
		"semver": "^7.7.2",
		"tiny-invariant": "^1.3.3",
		"tslib": "^2.8.1",
		"typescript": "5.9.2",
		"vitest": "^3.2.4",
		"yaml": "^2.8.1"
	},
	"dependencies": {
		"@codemirror/state": "^6.5.2",
		"@codemirror/view": "^6.38.2",
		"dexie": "^4.2.0",
		"loglevel": "^1.9.2",
		"monkey-around": "^3.0.0",
		"nanoid": "^5.1.6"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron",
			"esbuild"
		]
	}
}
