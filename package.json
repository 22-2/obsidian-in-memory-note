	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@codemirror/view": "^6.38.2",
		"@types/node": "24.5.2",
		"builtin-modules": "5.0.0",
		"dotenv": "^17.2.2",
		"esbuild": "0.25.10",
		"obsidian": "^1.8.7",
		"obsidian-typings": "4.51.0",
		"tslib": "^2.8.1",
		"typescript": "5.9.2",
		"vitest": "^3.2.4",
		"yaml": "^2.8.1"
	},
	"dependencies": {
		"monkey-around": "^3.0.0"
