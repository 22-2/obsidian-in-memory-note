{
	"name": "obsidian-in-memory-note",
	"version": "2.0.0",
	"description": "A minimal in-memory note-taking plugin for Obsidian.",
	"main": "main.js",
	"scripts": {
		"dev": "pnpm dlx tsx esbuild.config.mts",
		"build": "pnpm dlx tsx esbuild.config.mts production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"check-types": "tsc -noEmit -skipLibCheck",
